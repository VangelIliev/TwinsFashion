@model IEnumerable<Domain.Models.ProductDto>
@{
    ViewData["Title"] = "Admin Products";
}
<div class="container mt-5">
    <h2 class="mb-4">Admin Products</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Description</th>
                <th>Category</th>
                <th>SubCategory</th>
                <th>Color</th>
                <th>Sizes</th>
                <th>Remove Product</th>
                <th>Remove Size</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.Description</td>
                <td>@product.Category?.Name</td>
                <td>@product.SubCategory?.Name</td>
                <td>@product.Color?.Name</td>
                <td>
                    @if (product.Sizes != null && product.Sizes.Any())
                    {
                        <ul class="list-unstyled mb-0">
                        @foreach (var size in product.Sizes)
                        {
                            <li>@size.Name</li>
                        }
                        </ul>
                    }
                </td>
                <td>
                    <form asp-action="RemoveProduct" method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
                <td>
                    <form asp-action="RemoveProductSize" method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <select name="size" class="form-select form-select-sm mb-1" required>
                            <option value="" disabled selected>Select size</option>
                            @if (product.Sizes != null)
                            {
                                foreach (var size in product.Sizes)
                                {
                                    <option value="@size.Name">@size.Name</option>
                                }
                            }
                        </select>
                        <button type="submit" class="btn btn-warning btn-sm mt-1">Remove Size</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <form asp-action="LogOut" method="post">
        <button type="submit" class="btn btn-secondary">Log Out</button>
    </form>
</div>
