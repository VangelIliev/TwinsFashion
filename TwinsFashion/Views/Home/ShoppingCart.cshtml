@{
    var headerViewData = new ViewDataDictionary(ViewData);
    @await Html.PartialAsync("_Header", null, headerViewData);
}
@model ShoppingBasketViewModel
<!-- breadcrumb -->
@if(this.Model.Products.Any())
{
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
                Начало
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 cl4">
                Количка
            </span>
        </div>
    </div>

    <!-- Shoping Cart -->
    <form class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1"></th>
                                    <th class="column-2">Продукт</th>
                                    <th class="column-3">Цена</th>
                                    <th class="column-3">Количество</th>
                                    <th class="column-3">Размер</th>
                                    <th class="column-3">Общо</th>
                                    <th class="column-4"></th>
                                </tr>
                                @foreach (var productGroup in Model.Products)
                                {
                                    foreach (var product in productGroup.Value)
                                    {
                                        <tr class="table_row">
                                            <td class="column-1">
                                                <div class="how-itemcart1">
                                                    <img src="@(product.ImageUrls != null && product.ImageUrls.Count > 0 ? product.ImageUrls[0] : "~/images/product-01.jpg")" alt="IMG">
                                                </div>
                                            </td>
                                            <td class="column-2">@product.Name</td>
                                            <td class="column-3">@product.Price лв</td>
                                            <td class="column-3">
                                                <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                    <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                                    </div>

                                                    <input class="mtext-104 cl3 txt-center num-product" type="number" value="@product.Quantity" min="1">

                                                    <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="column-3" style="text-align:center">
                                                @product.Size
                                            </td>
                                            <td class="column-3">
                                                @((product.Price * product.Quantity).ToString("F2")) лв
                                            </td>
                                            <td class="column-4 text-center">
                                                <button type="button" class="btn btn-danger btn-sm remove-from-cart"
                                                        data-id="@product.Id" data-size="@product.Size" title="Премахни">
                                                    <i class="fs-16 zmdi zmdi-delete"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>

                        <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                            <div class="flex-w flex-m m-r-20 m-tb-5">
                                <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Код за отстъпка">

                                <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                    Използвай купона
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">
                            Обща Цена
                        </h4>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Доставка:
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    Моля въведете личен адрес , адрес на офис на еконт или офис на спиди.
                                </p>
                                <form asp-controller="Home" asp-action="Checkout">
                                    <div class="p-t-15">
                                        <span class="stext-112 cl8">
                                            Изберете място на доставка
                                        </span>
                                        <div class="bor8 bg0 m-b-22">
                                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" asp-for="EmailModel.FirstAndLastName" placeholder="Име и фамилия">
                                        </div>

                                        <div class="bor8 bg0 m-b-22">
                                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" asp-for="EmailModel.City" placeholder="Град">
                                        </div>
                                        <div class="bor8 bg0 m-b-22">
                                            <select style="width:100%" class="js-select2" name="time" asp-for="EmailModel.ShippingMethod">
                                                <option value="Офис на еконт">Офис на еконт</option>
                                                <option value="Личен адрес">Личен адрес</option>
                                                <option valuie="Офис на спиди">Офис на спиди</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                        <div class="bor8 bg0 m-b-22">
                                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" asp-for="EmailModel.PhoneNumber" placeholder="Телефонен номер">
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
                                <span class="mtext-101 cl2">
                                    Общо:
                                </span>
                            </div>

                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2 total">
                                    $79.65 лв
                                </span>
                            </div>
                        </div>

                        <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                            Поръчай
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="alert alert-info text-center mt-5">
        <h4>Количката ви е празна!</h4>
        За да добавиш продукти, моля да се върнеш в 
        <a href="@Url.Action("Index", "Home")">началото</a>.
    </div>
}
        @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/shoppingCart/basket.js"></script>
        }